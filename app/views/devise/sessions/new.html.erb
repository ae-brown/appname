                          
    <div class='wrap'>
      <div class='form'>
        <h2>Log in</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email %><br>
            <%= f.email_field :email, class: 'input_format' %>
          </div><br>

          <div class="field">
            <%= f.label :password %><br>
            <%= f.password_field :password,  class: 'input_format' %>
          </div>

          <div class="actions">
            <%= f.submit "Log in", class: 'input_button' %>
          </div><br>
        <% end %>

        <%= render "devise/shared/links" %>
        </div>

    </div>

